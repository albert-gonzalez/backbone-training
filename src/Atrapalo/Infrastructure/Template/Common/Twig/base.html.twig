<!DOCTYPE html>
<html lang="en">
    <head>
        {% block head %}
            <title>{% block title %}Todo List{% endblock %}</title>
            {% block css %}
                <link rel="stylesheet" href="/app/vendor/bootstrap/dist/css/bootstrap.css" />
                <link rel="stylesheet" href="/app/src/todoList/css/base.css" />
            {% endblock %}
        {% endblock %}
    </head>
    <body>
        <div class="header">
            {% block header %}
            <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
                <div class="container">
                  <div class="navbar-header">
                      <h1><a class="navbar-brand" href="/todolist">Todo List</a></h1>
                  </div>
                </div>
            </nav>
            {% endblock %}
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-offset-2 col-md-8" id="content">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>
        <div class="footer">
            {% block footer %}{% endblock %}
        </div>
        {% block javascript %}
        {% endblock %}
    </body>
</html>
